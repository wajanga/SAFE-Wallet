<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget314"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/widget236"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:gravity="center"
        android:padding="10dip"
        android:shadowColor="#ff003333"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Register Bank Account"
        android:textColor="#ff000066"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/bank_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Bank Name"
        android:inputType="text"
        android:text=""
        android:textSize="18sp" />

    <EditText
        android:id="@+id/bank_iban"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Bank IBAN/Routing Number"
        android:inputType="number"
        android:text=""
        android:textSize="18sp" />

    <EditText
        android:id="@+id/bank_account_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="User&apos;s Bank Account Number"
        android:inputType="number"
        android:text=""
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_accntreg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:onClick="registerAccount"
        android:text="Register"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>