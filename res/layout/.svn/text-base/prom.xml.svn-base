<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widget314"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="#ffcccccc">

	<include layout="@layout/header" />
	
	<include layout="@layout/footer" />

	<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/widget314"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="20dip"
	    android:layout_margin="20dip"
	    android:background="@drawable/rounded_background"
	    android:layout_below="@+id/widget236">
	        
	        <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:src="@drawable/list_logo"
	        android:layout_alignParentLeft="true" />
	        
	        <TextView
	        android:id="@+id/desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Promotion Text"
	        android:gravity="right"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:layout_toRightOf="@+id/imageView1"
	        android:layout_below="@+id/merchant"
	        android:layout_marginBottom="5dip"
	        android:layout_marginLeft="5dip" />

	    <TextView
	        android:id="@+id/end"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/start"
	        android:layout_toRightOf="@+id/imageView1"
	        android:text="End Date"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_marginBottom="5dip"
	        android:layout_marginLeft="5dip" />

	    <TextView
	        android:id="@+id/amount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/imageView1"
	        android:layout_below="@+id/end"
	        android:text="Amount"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_marginBottom="5dip"
	        android:layout_marginLeft="5dip" />

	    <TextView
	        android:id="@+id/start"
	        android:text="Start Date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/imageView1"
	        android:layout_below="@+id/desc"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:layout_marginBottom="5dip"
	        android:layout_marginLeft="5dip" />
	    
	    <TextView
	        android:id="@+id/merchant"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/imageView1"
	        android:text="Merchant"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:layout_marginBottom="5dip"
	        android:layout_marginLeft="5dip" />

	</RelativeLayout>
	
</RelativeLayout>