<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/widget314"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="#ffcccccc">

	<include layout="@layout/header" />

	<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/widget314"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="20dip"
	    android:layout_margin="20dip"
	    android:background="@drawable/rounded_background">

	    <include layout="@layout/footer" />
	    
	    <LinearLayout 
	        android:id="@+id/top_items"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:src="@drawable/list_logo" />
	        
	        <TextView
	        android:id="@+id/desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Promotion Text"
	        android:gravity="right"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    </LinearLayout>

	    <TextView
	        android:id="@+id/end"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/start"
	        android:layout_marginTop="10dip"
	        android:text="End Date"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/amount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/end"
	        android:layout_below="@+id/end"
	        android:layout_marginTop="10dip"
	        android:text="Amount"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/end"
	        android:layout_below="@+id/merchant"
	        android:layout_marginTop="10dip"
	        android:text="Start Date"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView
	        android:id="@+id/merchant"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/end"
	        android:layout_below="@+id/top_items"
	        android:layout_marginTop="10dip"
	        android:text="Merchant"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	</RelativeLayout>

</LinearLayout>