<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffcccccc" >

    <LinearLayout
        android:id="@+id/widget95"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffcccccc"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/widget236"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title"
            android:gravity="center"
            android:padding="10dip"
            android:shadowColor="#ff003333"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:text="m-Accounts"
            android:textColor="#ff000066"
            android:textSize="24sp"
            android:textStyle="bold" >
        </TextView>

        <Button
            android:id="@+id/safe_balance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/last_button_bg"
            android:drawableLeft="@drawable/safe_account_balance"
            android:gravity="fill"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	Account Balance"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/deposit_cash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/first_button_bg"
            android:drawableLeft="@drawable/deposit_cash"
            android:gravity="center|left"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	Deposit Cash"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/withdraw_cash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:drawableLeft="@drawable/withdraw_cash"
            android:gravity="fill"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	Withdraw Cash"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/transfer_money"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/last_button_bg"
            android:drawableLeft="@drawable/transfer_money"
            android:gravity="fill"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	Transfer Money"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/list_transactions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/last_button_bg"
            android:drawableLeft="@drawable/list_transactions"
            android:gravity="fill"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	List Transactions"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/list_SAFE_accounts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/first_button_bg"
            android:drawableLeft="@drawable/list_safe_accounts"
            android:gravity="center|left"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	List SAFE Accounts"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/create_new_SAFE_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:drawableLeft="@drawable/create_safe_account"
            android:gravity="fill"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	Create SAFE Account"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" >
        </Button>

        <Button
            android:id="@+id/suspend_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/last_button_bg"
            android:drawableLeft="@drawable/suspend_account"
            android:gravity="fill"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	Suspend Account"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/activate_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/last_button_bg"
            android:drawableLeft="@drawable/activate_account"
            android:gravity="fill"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	Activate Account"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/terminate_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/last_button_bg"
            android:drawableLeft="@drawable/terminate_account"
            android:gravity="fill"
            android:padding="10dip"
            android:paddingLeft="10dip"
            android:text="	Terminate Account"
            android:textColor="#ff3c0000"
            android:textSize="18sp"
            android:textStyle="bold" >
        </Button>
    </LinearLayout>

</ScrollView>