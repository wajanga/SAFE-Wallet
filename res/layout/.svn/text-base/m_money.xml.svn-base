<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
android:id="@+id/widget59"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@drawable/button_background"
android:orientation="vertical"
>

<RelativeLayout
android:id="@+id/widget99"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="#ffcccccc"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"

>
	<TextView  
android:id="@+id/widget236"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="m-Cash"
android:textSize="24sp"
android:textStyle="bold"
android:textColor="#ff000066"
android:shadowColor="#ff003333"  
        android:shadowRadius="1.5"  
        android:shadowDx="1"  
        android:shadowDy="1"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
   android:gravity="center"
   android:background="@drawable/title"
android:padding="10dip"

>
</TextView>
</RelativeLayout>

<ScrollView
android:id="@+id/ScrollView01"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_below="@+id/widget99" android:layout_above="@+id/widget929"

>
<LinearLayout
android:id="@+id/widget95"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="#ffcccccc"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_below="@+id/widget99" android:layout_above="@+id/widget929"
>
<Button
android:id="@+id/Load_Cash"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="	Load Cash Into Wallet"
android:textSize="18sp"
android:textStyle="bold"
android:textColor="#ff3c0000"

android:drawableLeft="@drawable/load_cash_into_wallet"
   android:gravity="fill"
   android:background="@drawable/first_button_bg"
android:paddingLeft="10dip"

>
</Button>
<Button
android:id="@+id/Unload_Cash"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="	Unload Cash From Wallet"
android:textSize="18sp"
android:textStyle="bold"
android:drawableLeft="@drawable/unload_cash_from_wallet"
   android:gravity="fill"
   android:background="@drawable/button_background"
android:paddingLeft="10dip"
android:textColor="#ff3c0000"

>
</Button>


<Button
android:id="@+id/View_Stored_Money"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="	View Stored Cash"
android:textSize="18sp"
android:textStyle="bold"
android:drawableLeft="@drawable/view_stored_money"
   android:gravity="fill"
   android:background="@drawable/last_button_bg"
android:paddingLeft="10dip"
android:textColor="#ff3c0000"

>
</Button>



</LinearLayout>
</ScrollView>
<LinearLayout
android:id="@+id/widget929"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:background="#ff000000"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_alignParentBottom="true"
>
<TextView
android:id="@+id/widget236"
android:layout_width="fill_parent"
android:layout_height="70px"
android:text="EUR"
android:layout_gravity="center_vertical|right"
   android:gravity="center"
   android:textSize="20sp"
android:textStyle="bold"
android:textColor="#ffffff00"

   android:background="@drawable/footer"
android:visibility="gone"
   >
</TextView>
</LinearLayout>
</RelativeLayout>