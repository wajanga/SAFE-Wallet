<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget59"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/button_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/widget236"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:gravity="center"
        android:padding="10dip"
        android:shadowColor="#ff003333"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="m-Settings"
        android:textColor="#ff000066"
        android:textSize="24sp"
        android:textStyle="bold" >
    </TextView>

    <Button
        android:id="@+id/application_conf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/first_button_bg"
        android:drawableLeft="@drawable/wallet_configuration"
        android:gravity="center|left"
        android:padding="10dip"
        android:paddingLeft="10dip"
        android:text="	Select SAFE System"
        android:textColor="#ff3c0000"
        android:textSize="18sp"
        android:textStyle="bold" >
    </Button>

    <Button
        android:id="@+id/wallet_applications"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/first_button_bg"
        android:drawableLeft="@drawable/walletapplications"
        android:gravity="center|left"
        android:padding="10dip"
        android:paddingLeft="10dip"
        android:text="	Wallet Applications"
        android:textColor="#ff3c0000"
        android:textSize="18sp"
        android:textStyle="bold" >
    </Button>

    <Button
        android:id="@+id/user_reg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:drawableLeft="@drawable/user_registration"
        android:gravity="fill"
        android:padding="10dip"
        android:paddingLeft="10dip"
        android:text="	User Registration"
        android:textColor="#ff3c0000"
        android:textSize="18sp"
        android:textStyle="bold" >
    </Button>

    <Button
        android:id="@+id/security_settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/last_button_bg"
        android:drawableLeft="@drawable/security_options"
        android:gravity="fill"
        android:padding="10dip"
        android:paddingLeft="10dip"
        android:text="	Security Settings"
        android:textColor="#ff3c0000"
        android:textSize="18sp"
        android:textStyle="bold" >
    </Button>

    <Button
        android:id="@+id/system_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/last_button_bg"
        android:drawableLeft="@drawable/msettings"
        android:gravity="fill"
        android:padding="10dip"
        android:paddingLeft="10dip"
        android:text="@string/system_info"
        android:textColor="#ff3c0000"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>