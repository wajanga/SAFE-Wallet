<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget95"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@+id/widget929"
    android:layout_below="@+id/widget99"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/widget236"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:gravity="center"
        android:padding="10dip"
        android:shadowColor="#ff003333"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Transfer Money"
        android:textColor="#ff000066"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/transAmount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Amount"
        android:inputType="number"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/rcvAccNo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Recipient&apos;s SAFE Account"
        android:inputType="number"
        android:text=""
        android:textSize="22sp" />

    <Spinner
        android:id="@+id/trspinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:prompt="@string/select_safe_account" />

    <Button
        android:id="@+id/btn_transfer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:onClick="transferMoney"
        android:text="Transfer"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>