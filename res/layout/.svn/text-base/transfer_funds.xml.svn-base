<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget314"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/widget236"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title"
        android:gravity="center"
        android:padding="10dip"
        android:shadowColor="#ff003333"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="Transfer Funds"
        android:textColor="#ff000066"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/issuing_bank"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Bank IBAN / Routing Number"
        android:inputType="number"
        android:textSize="18sp"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/source_bank"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:prompt="@string/select_bank_account" />

    <EditText
        android:id="@+id/cardnum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Receiving account"
        android:inputType="number"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/cardnum2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:hint="Amount to transfer"
        android:inputType="numberDecimal"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_cardreg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:onClick="transferFunds"
        android:text="Transfer"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>