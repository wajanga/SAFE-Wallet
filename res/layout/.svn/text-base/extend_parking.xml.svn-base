<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget314"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/widget314"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="10px" >

        <EditText
            android:id="@+id/parking_place"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Parking place"
            android:inputType="number"
            android:textSize="18sp" >
        </EditText>

        <Button
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:onClick="startTime"
            android:text="Start time: "
            android:textSize="18sp" />

        <Button
            android:id="@+id/expiration_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:onClick="expireTime"
            android:text="Expiration time: "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/hours"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Hours"
            android:inputType="number"
            android:maxEms="2"
            android:textSize="18sp" >
        </EditText>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/widget314"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:paddingTop="60px" >

            <Button
                android:id="@+id/extend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="extendParking"
                android:text="Extend"
                android:textSize="20sp"
                android:textStyle="bold" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>