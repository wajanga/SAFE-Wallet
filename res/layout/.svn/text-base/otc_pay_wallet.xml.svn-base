<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/widget236"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title"
        android:gravity="center"
        android:padding="10dip"
        android:shadowColor="#ff003333"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="m-Pay"
        android:textColor="#ff000066"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btStatus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="BT Status: None"
        android:textColor="#ff000066"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/safeAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="SAFE Account"
        android:textColor="#ff000066"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConnectMerchant"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:onClick="connectMerchant"
        android:text="Connect to Merchant"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSendAcc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:onClick="sendAcc"
        android:text="Send Account"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>