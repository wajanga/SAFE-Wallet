<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget314"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/widget314"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="10px" >

        <EditText
            android:id="@+id/parking_place"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Parking place"
            android:inputType="number"
            android:textSize="18sp" >
        </EditText>

        <EditText
            android:id="@+id/hours"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Hours"
            android:inputType="number"
            android:maxEms="2"
            android:textSize="18sp" >
        </EditText>

        <LinearLayout
            android:id="@+id/pay_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pay_with_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay With: "
                android:textColor="#ff3c0000"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/pay_options"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/pay_options" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/widget314"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="60px"
            android:paddingRight="60px"
            android:paddingTop="60px" >

            <Button
                android:id="@+id/pay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="payParking"
                android:text="Pay"
                android:textSize="20sp"
                android:textStyle="bold" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>